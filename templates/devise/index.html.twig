{% extends 'base.html.twig' %}

{% block title %}Devise index{% endblock %}

{% block body %}
    <h1>Devise index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Devise</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for devise in devises %}
            <tr>
                <td>{{ devise.id }}</td>
                <td>{{ devise.devise }}</td>
                <td>
                    <a href="{{ path('devise_show', {'id': devise.id}) }}">show</a>
                    <a href="{{ path('devise_edit', {'id': devise.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('devise_new') }}">Create new</a>
{% endblock %}
