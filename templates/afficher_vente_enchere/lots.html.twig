{% extends 'base.html.twig' %}

{% block title %}Vente index{% endblock %}

{% block body %}
    <h1>Vente index</h1>
    <h3>{{ id }}</h3>
    <table class="table">
        <thead>
        <tr>
            <th>Nom Lot</th>
            <th>Commission</th>

            <th>actions</th>

        </tr>
        </thead>
        <tbody>
        {% for vente in ventes %}
            <tr>
                <td>{{ vente.idLot }}</td>
                <td>{{ vente.commission }}</td>

                <td>
                    <a href="{{ path('afficher_vente_enchere_lots_encherir', {'id': id.id, 'vente' : vente.id}) }}">Encherir</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de lots</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
