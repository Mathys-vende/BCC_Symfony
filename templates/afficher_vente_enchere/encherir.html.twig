
{% extends 'base.html.twig' %}

{% block title %}Vente index{% endblock %}

{% block body %}

    {% if app.user %}

        
        <h2>{{ ventes.nom }}</h2>
        <h3>La plus haute enchere actuelle :{% for enchere in BestEnchere %}
                {{ enchere }}
            {% endfor %}
        </h3>

        <div class="d-flex justify-content-center container mt-5 " >
        {% for produit in produits %}
            <div class="card p-3 bg-white"><i class="fa fa-apple"></i>
                <div class="about-product text-center mt-2">{#<img src="https://i.imgur.com/3VTaSeb.png" width="300">#}
                    <div>
                        <h4>{{ produit.nom }}</h4>
                    </div>
                </div>
                <div class="stats mt-2">
                    <div class="d-flex justify-content-between p-price"><span></span></div>
                    <div class="d-flex justify-content-between p-price"><span>{{ produit.description }}</span></div>
                </div>
            </div>
        {% endfor %}
        </div>



        {{ include('encherir/_form.html.twig') }}

        {% else %}

        <p>Connectez vous pour encherir</p>
            <a href="{{ path('app_login') }}">Connectez vous</a>
    {% endif %}

{% endblock %}

