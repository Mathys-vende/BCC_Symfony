{% extends 'base.html.twig' %}

{% block title %}Lot index{% endblock %}

{% block body %}
    <h1>Lot index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>PrixDeDepart</th>
                <th>PrixDeVente</th>
                <th>PrixDeReserve</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lot in lots %}
            <tr>
                <td>{{ lot.id }}</td>
                <td>{{ lot.nom }}</td>
                <td>{{ lot.description }}</td>
                <td>{{ lot.prixDeDepart }}</td>
                <td>{{ lot.prixDeVente }}</td>
                <td>{{ lot.prixDeReserve }}</td>
                <td>{{ lot.statut }}</td>
                <td>
                    <a href="{{ path('lot_show', {'id': lot.id}) }}">show</a>
                    <a href="{{ path('lot_edit', {'id': lot.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('lot_new') }}">Create new</a>
{% endblock %}
