{% extends 'base.html.twig' %}
{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}


    {{ form_start(registrationForm,{
        label: false,
        attr:{'class': 'w-full flex justify-center items-center flex-wrap text-white'}
    }) }}

    <h1 class="w-full text-center font-bold text-2xl m-5">Inscription</h1>
    <div class="w-full text-center flex justify-center items-center mb-3">
        <div class="bg-gray-800 border border-black border-opacity-25 flex justify-center items-center h-10 rounded">
            {{ form_row(registrationForm.email, {
                attr: {'class':'ml-2 bg-transparent h-5 focus:outline-none'},
                label: false
            }) }}
        </div>
    </div>
    <div class="w-full text-center flex justify-center items-center mb-3">
        <div class="bg-gray-800 border border-black border-opacity-25 flex justify-center items-center h-10 rounded">
            {{ form_row(registrationForm.plainPassword, {
                attr: {'class':'ml-2 bg-transparent h-5 focus:outline-none'},
                label: false
            }) }}
        </div>
    </div>
    <div class="w-full text-center flex justify-center items-center mb-3">
        Accepter les conditions générales
        <div class="flex justify-center items-center">
            {{ form_row(registrationForm.agreeTerms,{
                attr: {'class':'ml-2'},
                label: false
            }) }}
        </div>
    </div>

    <div class="w-full text-center flex justify-center items-center mt-3">
        <button class="bg-bcc-green p-3 w-32 justify-center items-center text-center text-xs text-white rounded shadow"
                type="submit">
            S'inscrire
        </button>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}