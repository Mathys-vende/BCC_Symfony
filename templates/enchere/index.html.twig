    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>PrixProposer</th>
                <th>EstAdjuger</th>
                <th>DateHeureVente</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
